<% include ../partials/header %>

    <header class="jumbotron">
        <div class="container">
             <h1><span class="glyphicon glyphicon-tent"></span> Welcome To YelpCamp!</h1>
            <p>View User hand-picked campgrounds from all over the world</p>
            <p >
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
            </p>
            <p>
              <form id="searchcamp" action="/campgrounds" method="GET" class="form-inline" id="campground-search">
                <div class="form-group">
                  <input type="text" name="search" placeholder="Campground search..." class="form-control">
                </div>
              </form>
             </p>
        </div>
    </header>


    <div class="row text-center">
        <% campgrounds.forEach(function(campground){ %>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 mb-4">
            <div class="card">
                <img src="<%= campground.image[0] %>" class="card-img-top" alt="camp image">
                    <div class="card-body">
                        <h5 class="card-title text-capitalize"><%= campground.name %></h5>
                            <p class="card-text">
                                <% if (campground.rating === 0) { %>
                                <em>No reviews yet.</em>
                                <% } else { %>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star <% if (campground.rating > 1.5) { %> checked <% } %>"></span>
                                <span class="fa fa-star <% if (campground.rating > 2.5) { %> checked <% } %>"></span>
                                <span class="fa fa-star <% if (campground.rating > 3.5) { %> checked <% } %>"></span>
                                <span class="fa fa-star <% if (campground.rating > 4.5) { %> checked <% } %>"></span>
                                <% } %>
                            </p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>                   



<% include ../partials/footer %> 