<% include ./partials/header %>
    <div class="row">
        <div class="col-md-12">
            <form class="form" action="/reset/<%= token %>" method="POST">
                <h1 class="h3 mb-3 font-weight-normal text-center">Reset Password</h1>
                <label for="password" class="sr-only">New Password</label>
                <input type="password" id="password" class="form-control" name="password" placeholder="new password" required autofocus>
                    <label for="confirm" class="sr-only">Confirm Password</label>
                    <input type="password" id="confirm" class="form-control" name="confirm" placeholder="new confirm password" required >
                        <button type="submit" class="btn btn-lg btn-primary btn-block sap">Update Password</button>
            </form>
                    
                        <div class="text-center"><br />
                            <div class="spinner-border" role="status" style="display:none" >
                                <span class="sr-only">Loading...</span>
                            </div>
                        </div>
                    
        </div>
    </div>
<% include ./partials/footer %>