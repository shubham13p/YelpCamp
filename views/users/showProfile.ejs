<% include ../partials/header %>
    <div class="row justify-content-center mb-6">
        <div class="col-md-12 text-center">
        <h1>Profile</h1>
        </div>
            <div class="col-8 col-sm-8 col-md-6 col-lg-4">
            <form class="form" action="/users/<%=foundUser._id%>/editProfile" method="get">

                <div class="form-group text-center">
                    <img class="img-thumbnail " src="<%=foundUser.avatar%>" alt="User Profile Img">
                </div>
                <div class="form-group">
                    <label>FirstName</label>
                    <input class="form-control" type="text" value="<%=foundUser.firstName%>" placeholder="First Name" disabled>
                </div>
                <div class="form-group">
                    <label>LastName</label>
                    <input class="form-control" type="text" value="<%=foundUser.lastName%>" placeholder="Last Name" disabled>
                </div>
                <div class="form-group">
                    <label>UserBio</label>
                    <input class="form-control" type="text" value="<%=foundUser.bio%>" placeholder="User Bio" disabled>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Edit Profile</button>
                </div>
            <a class="btn btn-outline-primary" href="/campgrounds"><i class="fa fa-arrow-left"></i>Go Back</a>
            </form>
        </div>
    </div>
<% include ../partials/footer %>